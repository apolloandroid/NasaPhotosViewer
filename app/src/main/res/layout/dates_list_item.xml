<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{()->viewmodel.onDateClick()}"
        app:cardElevation="6dp">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@android:drawable/ic_menu_day"
            android:drawablePadding="8dp"
            android:gravity="center"
            tools:text="@{date.date}" />

    </androidx.cardview.widget.CardView>

    <data>

        <variable
            name="date"
            type="com.example.nasaphotosviewer.data.model.Date" />

        <variable
            name="viewmodel"
            type="com.example.nasaphotosviewer.ui.dateoverview.DateOverviewViewModel" />
    </data>
</layout>